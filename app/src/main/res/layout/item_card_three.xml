<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_three"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/img_container_card_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:strokeWidth="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_card_three"
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:contentDescription="@string/dummy_image"
            android:scaleType="centerCrop"
            android:src="@drawable/example_img" />
    </com.google.android.material.card.MaterialCardView>

    <ImageButton
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="7dp"
        android:background="@drawable/container_bookmark_button"
        android:contentDescription="@string/icon"
        android:src="@drawable/ic_bookmark_1"
        app:layout_constraintEnd_toEndOf="@id/img_container_card_three"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_sponsored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="9dp"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/sponsored"
        android:textColor="@color/davysGrey"
        android:background="@drawable/sponsored_corner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_container_card_three" />

    <TextView
        android:id="@+id/tv_title_card_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="6dp"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/txt_title_card_three"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_sponsored" />

    <LinearLayout
        android:id="@+id/ll_rating_card_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_card_three">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="1dp"
            android:contentDescription="@string/icon"
            android:src="@drawable/ic_start_fill_2" />

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/txt_rating_card_three" />

        <TextView
            android:id="@+id/tv_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_review_card_three" />
    </LinearLayout>

    <TextView
        android:id="@+id/hotel_price_card_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/txt_price_card_three"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_rating_card_three" />


    <LinearLayout
        android:id="@+id/ll_site_card_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hotel_price_card_three">

        <TextView
            android:id="@+id/site_card_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="3dp"
            android:textSize="14sp"
            android:text="@string/official_site"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hotel_price_card_three" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="1dp"
            android:contentDescription="@string/icon"
            android:src="@drawable/ic_link" />
    </LinearLayout>

    <Button
        android:layout_width="117dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/maize"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/contact"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/img_container_card_three"
        app:layout_constraintBottom_toBottomOf="@+id/ll_site_card_three" />
</androidx.constraintlayout.widget.ConstraintLayout>