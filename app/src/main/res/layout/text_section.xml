<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title_section"
        style="@style/TitleSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hidden gems"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_subtitle_section"
        style="@style/SubtitleSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore nearby gems and hidden treasures"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_section" />

</androidx.constraintlayout.widget.ConstraintLayout>