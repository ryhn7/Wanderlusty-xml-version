<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".WanderlustyApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Wanderlusty"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/title_activity_main" />
        <activity
            android:name=".feature_community.presentation.CommunityActivity"
            android:exported="false" />
        <activity
            android:name=".feature_settings.presentation.SettingsActivity"
            android:exported="false" />
        <activity
            android:name=".feature_plans.presentation.PlansActivity"
            android:exported="false" />
        <activity
            android:name=".feature_explore_tourism.presentation.explore.AddTourismActivity"
            android:exported="false" />
        <activity
            android:name=".feature_explore_tourism.presentation.explore.ExploreActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>